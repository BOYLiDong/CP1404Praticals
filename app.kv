# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: "Sort by: "
        Spinner:
            id: spinner
            text:app.current_sort
            values: app.sort_choices
            on_text: app.change_sort(spinner.text)



        Label:
            text: "Add New place..."
        Label:
            text: "Name: "
        TextInput:
            id: place_name
        Label:
            text: "country: "
        TextInput:
            id: place_country
        Label:
            text: "priority: "
        TextInput:
            id: place_priority
        Button:
            text: "Add place"
            on_release: app.add_places()

        Button:
            text: "Clear"
            on_press: app.Clear_input()
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: status
            size_hint_y: 0.1
            text: app.message

        BoxLayout:
            id: entriesBox
            cols: 1
            orientation: "vertical"

        Label:
            id: status2
            size_hint_y: 0.1
            text: app.news
